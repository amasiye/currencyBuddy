<?xml version='1.0' encoding='utf-8'?>
<widget
    id="com.atatusoft.CurrencyBuddy"
    version="1.2.15"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Currency Buddy</name>
    <description>
        A simple forex conversion app.
    </description>
    <author email="atatusoft@gmail.com" href="http://atatusoft.ml">
        AtatuSoft Team
    </author>
    <content src="index.html" />

    <!-- Screen orientation -->
    <plugin name="cordova-plugin-screen-orientation" spec="1"/ >

    <!-- iOS Icons -->
    <icon src="apple-icon-72x72.png" platform="ios" width="57" height="57" density="mdpi" />

    <!-- Android Icons -->
    <icon src="android-icon-36x36.png" platform="android" qualifier="ldpi" />
    <icon src="android-icon-48x48.png" platform="android" qualifier="mdpi" />
    <icon src="android-icon-72x72.png" platform="android" qualifier="hdpi" />
    <icon src="android-icon-96x96.png" platform="android" qualifier="xhdpi" />
    <icon src="android-icon-144x144.png" platform="android" qualifier="xxhdpi" />
    <icon src="android-icon-192x192.png" platform="android" qualifier="fr-xxhdpi" />

    <!-- Splash Screen -->
    <plugin name="cordova-plugin-splashscreen" spec="1" />

    <!-- Default Splash Screen -->
    <splash src="splash.png" />

    <!-- iOS Splash -->
    <!-- <splash src="splash/ios/Default-568h@2x~iphone.png" platform="ios" width="320" height="480" /> -->

    <!-- Android Splash -->
    <splash src="images/android/splash-ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="images/android/splash-mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="images/android/splash-hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="images/android/splash-xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="images/android/splash-xxhdpi.png" platform="android" qualifier="xxhdpi" />

    <preference name="SplashMaintainAspectRatio" value="true|false" />
    <preference name="SplashShowOnlyFirstTime" value="true|false" />

    <!-- Whitelist -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="https://openexchangerates.org/*" />
    <!-- Allow links to web pages to open in a browser -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <!-- Allow images, xhrs, etc. to google.com -->
    <access origin="http://openexchangerates.org/*" />
    <access origin="https://openexchangerates.org/*" />
</widget>
